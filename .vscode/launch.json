    "version": "0.2.0",
    "configurations": [
          {
            "request": "launch",
            "name": "Run STD Example",
            "type": "pwa-node",
            "program": "${workspaceFolder}/examples/std.ts",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--inspect",
                "--allow-all"
            ],
            "args": [
              "--cors"
            ],
            "attachSimplePort": 9229
        },
        {
            "request": "launch",
            "name": "Run Persistent STD Example",
            "type": "pwa-node",
            "program": "${workspaceFolder}/examples/std.ts",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--inspect",
                "--allow-all"
            ],
            "args": [
              "--persist",
              "--cors"
            ],
            "attachSimplePort": 9229
        }
    ]
}
